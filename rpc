from tkinter import *
import tkinter.font as font
import random

player_score=0
comp_score=0
options=[("rock,0"), ("paper,1"), ("scissors,2")]

def computer_wins():
    global comp_score, player_score
    comp_score += 1
    winner_label.config(text="Computer Won!!!")
    computer_score_label.config(text="Computer Score:" + str(comp_score))
    player_score_label.config(text="Player Score:" + str(player_score))

def player_wins():
    global comp_score, player_score
    player_score += 1
    winner_label.config(text="Player Won!!!")
    computer_score_label.config(text="Computer Score:" + str(comp_score))
    player_score_label.config(text="Player Score:" + str(player_score))

def tie():
    global comp_score, player_score
    winner_label.config(text="TIE!!!")
    computer_score_label.config(text="Computer Score:" + str(comp_score))
    player_score_label.config(text="Player Score:" + str(player_score))

def player_choice(player_input):

    global comp_score, player_score
    print(player_input)

    comp_input=get_comp_choice()
    print(comp_input)
    player_choice_label.config(text="Your Selected:" + player_input[0])
    comp_choice_label.config(text="Computer Selected:" + comp_input[0])

    if(player_input == comp_input):
        tie()

    if(player_input[1]==0):
        if(comp_input[1]==1):
            computer_wins()
        elif(comp_input[1]==2):
            player_wins()

    elif(player_input[1]==1):
        if(comp_input[1]==0):
            player_wins()
        elif(comp_input[1]==2):
            computer_wins()

    elif(player_input[1]==2):
        if(comp_input[1]==0):
            computer_wins()
        elif(comp_input[1]==1):
            player_wins()

    def get_computer_choice():
        return random.choice(options)
    
    game_window = Tk()
    game_window.title("Rock Paper Scissors")

    app_font=font.Font(size=12)

    game_title = Label(text= "Rock Paper Scissors", font=font.Font(size = 20), fg ="grey" )
    game_title.pack()

    winner_label = Label(text= "Let's Start The Game...", font=font.Font(size = 13), fg ="green", pady=8 )
    winner_label.pack()

    input_frame=Frame(game_window)
    input_frame.pack()

    player_options = Label(text= "Your Options:", font=font.Font(size = 20), fg ="grey" )
    player_options.pack()
