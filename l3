import cv2

image=cv2.imread("bottleimg.png")
hsvImage=cv2.cvtColor(image, cv2.COLOR_BGR2HSV)
cv2.imshow("normal", image)
cv2.imshow("HSV", hsvImage)
cv2.waitKey(0)
cv2.destroyAllWindows()
