import cv2
img=cv2.imread("chipsimg.png")
edges=cv2.Canny(img, 100, 100)

cv2.imshow("Original Image", img)
cv2.imshow("Edged Image", edges)
cv2.waitkey(0)
_____________________________________________________________________________________________
import cv2

img=cv2.imread("ancientcity3.png")
rows, cols =img.shape

M=cv2.getRotationMatrix2D((cols/2, rows/2), -90, 2)
res= cv2.warpAffine(img, M, (cols, rows))

result=cv2.rotate(img,cv2.ROTATE_90_CLOCKWISE)
cv2.imshow("result.png", result)
cv2.imshow("Original Image", img)
cv2.imshow("Rotated Image", res)
cv2.waitKey(0)
