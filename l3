import cv2

img=cv2.imread("bagimg.png")
bordered_image=cv2.copyMakeBorder(img, 10, 10, 10, 10, cv2.BORDER_CONSTANT, value=1)

cv2.imshow("Bordered image", bordered_image)
cv2.waitKey()
cv2.destroyAllWindows()

import cv2

img=cv2.imread("bagimg.png")
bordered_image=cv2.copyMakeBorder(img, 10, 10, 10, 10, cv2.BORDER_REFLECT, value=1)

cv2.imshow("Bordered image", bordered_image)
cv2.waitKey()
cv2.destroyAllWindows()
