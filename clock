from tkinter import *
from tkinter.ttk import *
import random
from time import strftime
colour_list=["red", "orange", "yellow"]
root=Tk()
root.title("Clock")
def time():
    string=strftime("%H:%M:%S %p")
    lbl.config(text=string)
    lbl.after(1000, time)
    bg_colours=["red", "orange", "yellow", "lime", "purple", "turquoise", "pink"]
    fg_colours=["white", "black", "blue", "magenta", "maroon", "green", "red"]

    random_bg_colour=random.choice(bg_colours)
    random_fg_colour=random.choice(fg_colours)
    
    lbl.config(background=random_bg_colour)
    lbl.config(foreground=random_fg_colour)
    lbl.after(1000, time)

lbl = Label(root, font=("calibri", 40, "bold"))
    
lbl.pack(anchor="center")
time()
root.mainloop()
